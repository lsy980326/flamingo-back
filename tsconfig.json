{
  "compilerOptions": {
    "target": "es2020", // 컴파일될 JavaScript 버전
    "module": "commonjs", // 모듈 시스템
    "rootDir": "./src", // TypeScript 소스 파일 루트 디렉토리
    "outDir": "./dist", // 컴파일된 JavaScript 파일이 저장될 디렉토리
    "esModuleInterop": true, // CommonJS 모듈을 ES6 모듈처럼 가져올 수 있게 함
    "forceConsistentCasingInFileNames": true,
    "strict": false, // 모든 엄격한 타입-검사 옵션 활성화
    "skipLibCheck": true, // 의존성 라이브러리의 타입 검사 스킵
    "strictNullChecks": false // null과 undefined에 대한 엄격한 검사 비활성화
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
